<div class="container">
  <div class="row col-xxl-5 mx-auto border border-secondary rounded px-3 py-4" style="margin-top: 6rem;">
    <h1 class="text-center py-3 fw-bold">Register</h1>
    {{> message}}
    <form action="/users/register" method="POST">
      <label for="name" class="mb-2">Name</label>
      <div class="input-group mb-2">
        <input type="name" name="name" class="form-control">
      </div>
      <label for="email" class="mb-2">Email</label>
      <div class="input-group mb-2">
        <input type="email" name="email" class="form-control">
      </div>
      <label for="password" class="mb-2">Password</label>
      <div class="input-group mb-2">
        <input type="password" name="password" class="form-control">
      </div>
      <label for="confirmPassword" class="mb-2">Confirm-password</label>
      <div class="input-group mb-2">
        <input type="password" name="confirmPassword" class="form-control">
      </div>
      <button type="submit" class="btn btn-primary my-3 py-2 w-100">Register</button>
      <div class="mt-3">
        <a href="/users/login" class="text-decoration-none fw-bold" style="color:#0d6efd">已有帳戶，返回登入頁面</a>
      </div>
    </form>
  </div>
</div>