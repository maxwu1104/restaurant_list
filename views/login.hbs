<div class="container">
  <div class="row col-xxl-5 mx-auto border border-secondary rounded px-3 py-4" style="margin-top: 6rem;">
    <h1 class="text-center py-3 fw-bold">Login</h1>
    {{> message}}
    <form action="/users/login" method="POST">
      <label for="email" class="mb-2">Email</label>
      <div class="input-group mb-2">
        <input type="email" name="email" class="form-control" required="true">
      </div>
      <label for="password" class="mb-2">Password</label>
      <div class="input-group mb-2">
        <input type="password" name="password" class="form-control" required="true">
      </div>
      <button type="submit" class="btn btn-primary my-3 py-2 w-100">Login</button>
      <div class="mt-3">
        <a href="/users/register" class="text-decoration-none fw-bold" style="color:#0d6efd">建立帳戶</a>
      </div>
    </form>
  </div>
</div>