<div class='container mt-3'>
  <form action='/restaurants/new/' method='POST' class='position-relative'>
    <div class='mx-auto w-50'>

      <div class='mb-4 mx-auto'>
        <label for='name' class='form-label'>餐廳名稱</label>
        <div class='input-group col-md-8'>
          <input type='text' name='name' id='name' placeholder='輸入餐廳名稱...' class='w-100 px-3 py-1.5 form-control'
            required='true' />
        </div>
      </div>

      <div class='mb-4 mx-auto'>
        <label for='name_en' class='form-label'>餐廳英文名稱</label>
        <div class='input-group col-md-8'>
          <input type='text' name='name_en' id='name_en' placeholder='輸入餐廳英文名稱...'
            class='w-100 px-3 py-1.5 form-control' required='true' />
        </div>
      </div>

      <div class='mb-4 mx-auto'>
        <label for='category' class='form-label'>餐廳分類</label>
        <div class='input-group col-md-8'>
          <input list='categories' name='category' id='category' placeholder='餐廳分類'
            class='w-100 px-3 py-1.5 form-control' required='true' />
          <datalist id='categories'>
            <option>中東料理</option>
            <option>日本料理</option>
            <option>義式餐廳</option>
            <option>美式</option>
            <option>酒吧</option>
            <option>咖啡</option>
          </datalist>
        </div>
      </div>

      <div class='mb-4 mx-auto'>
        <label for='image' class='form-label'>封面照片網址</label>
        <div class='input-group col-md-8'>
          <input type='text' name='image' id='image' placeholder='image-url..' class='w-100 px-3 py-1.5 form-control'
            required='true' />
        </div>
      </div>

      <div class='mb-4 mx-auto'>
        <label for='location' class='form-label'>餐廳地址</label>
        <div class='input-group col-md-8'>
          <input type='text' name='location' id='location' placeholder='輸入餐廳地址..' class='w-100 px-3 py-1.5 form-control'
            required='true' />
        </div>
      </div>

      <div class='mb-4 mx-auto'>
        <label for='phone' class='form-label'>餐廳電話</label>
        <div class='input-group col-md-8'>
          <input type='text' name='phone' id='phone' placeholder='輸入餐廳電話..' class='w-100 px-3 py-1.5 form-control'
            required='true' />
        </div>
      </div>

      <div class='mb-4 mx-auto'>
        <label for='google_map' class='form-label'>餐廳Google地址網址</label>
        <div class='input-group col-md-8'>
          <input type='text' name='google_map' id='google_map' placeholder='輸入餐廳Google地址網址..'
            class='w-100 px-3 py-1.5 form-control' required='true' />
        </div>
      </div>

      <div class='mb-4 mx-auto'>
        <label for='phone' class='form-label'>餐廳評分</label>
        <div class='input-group col-md-8'>
          <input type='number' name='rating' id='rating' placeholder='輸入餐廳評分 (1 ~ 5)..' min='0' max='5' step='0.1'
            class='w-100 px-3 py-1.5 form-control' required='true' />
        </div>
      </div>

      <div class='mb-4 mx-auto'>
        <label for='description' class='form-label'>餐廳簡介</label>
        <div class='input-group col-md-8'>
          <textarea name='description' id='description' cols='20' rows='5' placeholder='簡單說明此間餐廳...'
            class='w-100 px-3 py-1.5 form-control' required='true'></textarea>
        </div>
      </div>

      <button type='submit' class='btn btn-primary d-block mx-auto w-100'>
        送出
      </button>

    </div>
  </form>
</div>